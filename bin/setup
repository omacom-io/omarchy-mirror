#!/bin/bash

# Meant to be run as root on an Ubuntu machine

# General dependencies
apt install rclone vim

# Setup rclone (insert real values)
mkdir -p ~/.config/rclone
cp /root/omarchy-mirror/config/rclone.conf ~/.config/rclone/rclone.conf
echo "You must insert credentials manually in ~/.config/rclone/rclone.conf"

# Install hourly mirror service
cp /root/omarchy-mirror/config/omarchy-mirror-sync* /etc/systemd/system/
systemctl daemon-reload
systemctl enable --now omarchy-mirror-sync.timer
